<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vandenrobotics.com.greengame2014" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScoutActivity"
            android:label="@string/title_activity_scout"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vandenrobotics.com.greengame2014.MainActivity" />
        </activity>
        <activity
            android:name=".MatchActivity"
            android:label="@string/title_activity_match"
            android:screenOrientation="landscape"
            android:parentActivityName=".ScoutActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="vandenrobotics.com.greengame2014.ScoutActivity" />
        </activity>
    </application>

</manifest>
